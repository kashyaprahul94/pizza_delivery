{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots" : [ "./node_modules/@types" ],
    "watch": true,
    "outDir": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "*.ts",
    "src/*.ts",
    "src/**/*.ts"
  ]
}